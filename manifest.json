{
	"manifest_version": 2,
	"name": "NovelUpdates Notificator",
	"version": "1.0.1",
	"description": "Checks public reading list every * minutes and notify",
	"icons": {
		"16": "images/icon16.png", 
		"24": "images/icon24.png", 
		"32": "images/icon32.png", 
		"48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "browser_action": {
		"default_icon": {
			"16": "images/icon16.png",
			"24": "images/icon24.png",
			"32": "images/icon32.png"
		},
		"default_title": "NovelUpdates Notificator",
		"default_popup": "popup.html"
    },
    "author": "Sergei Iakhnitskii",
	"background": {
		"page": "background.html"
	},
	"homepage_url": "https://github.com/serjflint/NovelUpdates-Notificator",
	"incognito": "not_allowed",
	"minimum_chrome_version": "47",
	"offline_enabled": false,
	"options_page": "options.html",
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
  	},
  	"permissions": [
		"http://www.novelupdates.com/*",
		"background",
		"notifications",
		"storage",
		"alarms"
	],
	"web_accessible_resources": [
		"images/icon48.png"
	]
}